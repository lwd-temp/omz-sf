echo '==> Checking Config'
echo 'Edit `./config*` files before setup. Reference: `./samples/*`'
echo

echo ZSH=$ZSH
if [ -n "$INSTALLER_URL" ]; then echo INSTALLER_URL=$INSTALLER_URL; fi
if [ -n "$REMOTE" ]; then echo REMOTE=$REMOTE; fi
echo DISABLE_AUTOUPDATE=$DISABLE_AUTOUPDATE
echo APPLY_RECOMMENDED_THEME=$APPLY_RECOMMENDED_THEME
echo USE_ZSHRC_LOCAL=$USE_ZSHRC_LOCAL
echo APPLY_ZSHRC_PLUGINS_LOADER=$APPLY_ZSHRC_PLUGINS_LOADER

if [ "$APPLY_ZSHRC_PLUGINS_LOADER" = 1 ]; then

    echo ZSH_PLUGLOADER=$ZSH_PLUGLOADER
    echo ZSH_PLUGLOADER_LIST=$ZSH_PLUGLOADER_LIST
    echo ADD_RECOMMENDED_PLUGINS=$ADD_RECOMMENDED_PLUGINS

    if [ "$ADD_ENHANCED_ALIASES_PLUGINS" = 1 ]; then
        echo ADD_ENHANCED_ALIASES_PLUGINS=$ADD_ENHANCED_ALIASES_PLUGINS
    fi
fi

echo INSTALL_SYNTAXHIGHLIGHT=$INSTALL_SYNTAXHIGHLIGHT
echo INSTALL_AUTOSUGGESTIONS=$INSTALL_AUTOSUGGESTIONS

if [ -x "$(command -v pacman)" ]; then
    echo INSTALL_PACMAN_PKGFILE=$INSTALL_PACMAN_PKGFILE
fi

echo
